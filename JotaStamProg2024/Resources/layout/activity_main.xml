<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- IP Address Section -->
        <TextView
            android:id="@+id/ipAddressLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IP Address"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ipAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter IP Address" />

        <!-- Sound Controls Section -->
        <TextView
            android:id="@+id/soundControlsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sound Controls"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp" />

        <Switch
            android:id="@+id/enableSoundSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable Sound" />

        <TextView
            android:id="@+id/frequencyLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <SeekBar
            android:id="@+id/frequencySlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/durationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <SeekBar
            android:id="@+id/durationSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/offDurationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <SeekBar
            android:id="@+id/offDurationSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/volumeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volume" />
        
        <EditText
            android:id="@+id/volumeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Volume" />

        <EditText
            android:id="@+id/connectVolumeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Connect Volume" />

        <EditText
            android:id="@+id/cutVolumeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cut Volume" />

        <EditText
            android:id="@+id/cutSuccessVolumeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cut Success Volume" />

        <EditText
            android:id="@+id/cutFailedVolumeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cut Failed Volume" />

        <Button
            android:id="@+id/updateSoundButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Sound" />
        
        <Button
            android:id="@+id/resetSoundButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Sound" />

        <!-- Bomb Controls Section -->
        <TextView
            android:id="@+id/bombControlsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bomb Controls"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp" />

        <EditText
            android:id="@+id/bombCountInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Bomb Count" />

        <EditText
            android:id="@+id/minutesRemainingInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Minutes Remaining" />

        <Button
            android:id="@+id/updateGameStateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Game State" />
    </LinearLayout>
</ScrollView>
